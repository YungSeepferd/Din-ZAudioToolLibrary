{
  "mcpServers": {
    "svelte": {
      "type": "http",
      "url": "https://mcp.svelte.dev/mcp",
      "description": "Svelte 5 docs via hosted remote MCP endpoint",
      "enabled": true,
      "notes": "Remote server recommended by Svelte docs"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub repository browsing, code search, issue/PR management",
      "enabled": true,
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT:-}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Structured multi-step reasoning assistant",
      "enabled": true
    },
    "quillopy": {
      "command": "npx",
      "args": ["-y", "@quillopy/mcp"],
      "description": "On-demand up-to-date documentation for various libraries",
      "enabled": true
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "description": "Browser automation via Playwright",
      "enabled": true
    },
    "mcp-compass": {
      "command": "npx",
      "args": ["-y", "@liuyoshio/mcp-compass"],
      "description": "Discover and recommend MCP servers by description",
      "enabled": true
    }
  }
}
